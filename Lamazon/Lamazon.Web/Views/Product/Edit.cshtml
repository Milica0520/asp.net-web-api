@model Lamazon.Services.ViewModels.Product.ProductViewModel


<h2>Update Product</h2>

@using (Html.BeginForm("Edit", "Product", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <label asp-for="Name" class=" control-label"></label>
        <input asp-for="Name" class=" foem-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class=" control-label"></label>
        <input asp-for="Description" class=" foem-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class=" control-label"></label>
        <input asp-for="Price" class=" foem-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl" class=" control-label"></label>
        <input asp-for="ImageUrl" class=" foem-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductCategoryId " class="control-label"></label>
        <select asp-for="ProductCategoryId" class="form-control" asp-items="ViewBag.ProductCategories">
            <option>Select Product Category: </option>
        </select>
    </div>
    <div class=" form-group">
        <div>
            <a asp-controller="Product" asp-action="Index" class="btn btn-defoult">Cancel</a>
            <button class="btn btn-defoult" type="submit">Update</button>
        </div>
    </div>
}
