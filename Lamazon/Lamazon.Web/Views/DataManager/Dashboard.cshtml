@model List< Lamazon.Services.ViewModels.DataManager.DashboardViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container mt-5">
        <h1 class="mb-4 text-center">Dashboard - Pregled Narudžbi</h1>
        <div class="row g-3">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <h5 class="card-title">@item.MonthName</h5>
                            <p class="card-text">
                                <strong>Total orders:</strong> @item.TotalOrders<br />
                                <strong>Total revenue:</strong> @item.TotalRevenue $
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
